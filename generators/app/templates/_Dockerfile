#---- NODE ----
FROM node:alpine as build
WORKDIR /mnt
COPY . .

RUN npm install
RUN npm run build

#---- NGINX ----
FROM nginx:alpine as nginx
COPY --from=build /mnt/dist/subito-exercise /usr/share/nginx/html
COPY --from=build /mnt/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 9090

ENTRYPOINT ["sh"]

